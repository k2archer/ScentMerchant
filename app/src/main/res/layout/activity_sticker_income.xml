<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.StickerIncomeActivity">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b9b6b6" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:text="桌贴收益"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_sticker_adv_bar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/ll_title"
        app:srcCompat="@drawable/advertisement" />


    <TextView
        android:id="@+id/tv_merchant_id_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:layout_marginLeft="15dp"
        android:text="桌贴数量"
        android:textSize="22sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@id/iv_sticker_adv_bar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_sticker_adv_bar" />

    <TextView
        android:id="@+id/sticker_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 16个 "
        android:textSize="22dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_merchant_id_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_merchant_id_title"
        android:gravity="end"/>

    <View
        android:id="@+id/v_bar_1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#b9b6b6"
        app:layout_constraintLeft_toLeftOf="@id/tv_merchant_id_title"
        app:layout_constraintTop_toBottomOf="@id/tv_merchant_id_title" />

    <TextView
        android:id="@+id/tv_sticker_content_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="桌贴内容"
        android:textSize="22sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@id/tv_merchant_id_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_merchant_id_title" />

    <TextView
        android:id="@+id/sticker_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 逍遥江湖 "
        android:textSize="22dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_sticker_content_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_sticker_content_title"
        android:gravity="end"/>

    <View
        android:id="@+id/v_bar_2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#b9b6b6"
        app:layout_constraintLeft_toLeftOf="@id/tv_sticker_content_title"
        app:layout_constraintTop_toBottomOf="@id/tv_sticker_content_title" />

    <TextView
        android:id="@+id/tv_sticker_activate_date_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="激活日期"
        android:textSize="22sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@id/tv_sticker_content_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sticker_content_title" />

    <TextView
        android:id="@+id/tv_sticker_activate_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 2019-5-20 09:35:15 "
        android:textSize="22dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_sticker_activate_date_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_sticker_activate_date_title"
        android:gravity="end"/>

    <View
        android:id="@+id/v_bar_3"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#b9b6b6"
        app:layout_constraintLeft_toLeftOf="@id/tv_sticker_activate_date_title"
        app:layout_constraintTop_toBottomOf="@id/tv_sticker_activate_date_title" />

    <TextView
        android:id="@+id/tv_sticker_cycle_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="投放周期"
        android:textSize="22sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@id/tv_sticker_activate_date_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sticker_activate_date_title" />

    <TextView
        android:id="@+id/tv_sticker_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60天"
        android:textSize="22dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_sticker_cycle_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_sticker_cycle_title"
        android:gravity="end"/>

    <View
        android:id="@+id/v_bar_4"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#b9b6b6"
        app:layout_constraintLeft_toLeftOf="@id/tv_sticker_cycle_title"
        app:layout_constraintTop_toBottomOf="@id/tv_sticker_cycle_title" />

    <TextView
        android:id="@+id/tv_sticker_income"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="桌贴收益"
        android:textSize="22sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@id/tv_sticker_cycle_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sticker_cycle_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="数据统计"
        app:layout_constraintRight_toLeftOf="@id/tv_sticker_income_sign"
        app:layout_constraintBottom_toBottomOf="@id/tv_sticker_income"
        app:layout_constraintTop_toTopOf="@id/tv_sticker_income"
        />
    <TextView
        android:id="@+id/tv_sticker_income_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text=" › "
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_sticker_income"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_sticker_income" />

    <View
        android:id="@+id/v_bar_5"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#b9b6b6"
        app:layout_constraintLeft_toLeftOf="@id/tv_sticker_income"
        app:layout_constraintTop_toBottomOf="@id/tv_sticker_income" />

</android.support.constraint.ConstraintLayout>